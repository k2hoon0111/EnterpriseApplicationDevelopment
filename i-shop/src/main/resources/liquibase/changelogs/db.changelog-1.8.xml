<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="MumboJumbo" context="main">
        <createTable tableName="roles_permissions">
            <column name="roles_roleId" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="permissions_permissionId" type="BIGINT">
                <constraints nullable="false"/>
            </column>

        </createTable>
        <addPrimaryKey tableName="roles_permissions" columnNames="roles_roleId,permissions_permissionId"/>

        <addForeignKeyConstraint baseTableName="roles_permissions"
                                 baseColumnNames="permissions_permissionId"
                                 constraintName="fk_roles_permissions_permissions"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
                                 referencedColumnNames="permissionId"
                                 referencedTableName="permissions"/>

        <addForeignKeyConstraint baseTableName="roles_permissions"
                                 baseColumnNames="roles_roleId"
                                 constraintName="fk_roles_permissions_roles"
                                 deferrable="false"
                                 initiallyDeferred="false"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"
                                 referencedColumnNames="roleId"
                                 referencedTableName="roles"/>
    </changeSet>


</databaseChangeLog>